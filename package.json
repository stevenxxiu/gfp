{
  "name": "google_search_filter_plus",
  "version": "1.0.0",
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "babel-core": "^6.22.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^5.1.4",
    "css-loader": "^3.0.0",
    "file-loader": "^4.0.0",
    "html-loader": "^0.5.5",
    "istanbul": "^0.4.5",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.1",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.2",
    "mocha": "^6.1.4",
    "node-sass": "^4.3.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.1.0",
    "url-loader": "^2.0.0"
  },
  "scripts": {
    "pref": "set NODE_ENV=pref && webpack --output-filename dist/pref.js",
    "browser": "set NODE_ENV=browser && webpack --output-filename dist/google_search_filter_plus.user.js",
    "test": "set NODE_ENV=test && karma start"
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "max-len": [
        "error",
        120
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-console": "off",
      "no-constant-condition": [
        "error",
        {
          "checkLoops": false
        }
      ],
      "no-empty": "off",
      "no-unused-vars": [
        "error",
        {
          "args": "after-used",
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    },
    "env": {
      "es6": true,
      "amd": true,
      "node": true,
      "browser": true,
      "mocha": true
    },
    "globals": {
      "global": true,
      "GM_addStyle": true,
      "GM_getResourceText": true,
      "GM_getResourceURL": true,
      "GM_getValue": true,
      "GM_setValue": true,
      "GM_registerMenuCommand": true
    },
    "extends": "eslint:recommended"
  }
}
